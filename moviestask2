df_movies = pd.read_csv('/content/drive/MyDrive/data/movies.utf.csv',sep='::', engine='python')
df_movies.head()

import pandas as pd
df_ratings = pd.read_csv('/content/drive/MyDrive/data/ratings.dat',sep='::', engine='python')
df_ratings.head()
df_users = pd.read_csv('/content/drive/MyDrive/data/users.dat',sep='::', engine='python')
df_users.head()



df_movies.columns =['MovieID','MovieName','Genre']
df_movies.isnull().sum()



df_ratings.columns =['UserID','MovieID','Ratings','TimeStamp']
df_ratings.dropna(inplace=True)
df_ratings.head()
df_ratings.isnull().sum()

df_users.columns =['UserID','Gender','Age','Occupation','Zip-code']
df_users.dropna(inplace=True)
df_users.head(10)



user_ratings = pd.merge(df_ratings,df_users, on = ['UserID', 'UserID'])
user_ratings.head()
movie_ratings = df_movies.merge(user_ratings, on =['MovieID'])
movie_ratings.head()
movie_ratings.info()
